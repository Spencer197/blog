<h1>Listing articles</h1>
<%= link_to 'New Article', new_article_path %><!--This link will allow you to bring up the form that lets you create a new article.-->
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td><!--Show a link to the edit action in the list of all the articles next to the "Show" link.-->
      <td><%= link_to 'Destroy', article_path(article),# Add a 'Destroy' link to your index action template.
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
